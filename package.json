{
  "name": "kotor-gui-editor",
  "description": "A tool to make editing the GUI of KotOR visual and simpler",
  "author": {
    "name": "Andrew McOlash",
    "url": "https://amcolash.com"
  },
  "version": "0.0.3",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/amcolash/kotor-gui-editor.git"
  },
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "npm run compile && electron-builder",
    "dist:dir": "npm run dist --dir -c.compression=store -c.mac.identity=null",
    "dist:linux": "npm run compile && electron-builder --linux",
    "dist:mac": "npm run compile && electron-builder --mac",
    "dist:win": "npm run compile && electron-builder --win",
    "release": "npm run dist",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@types/object-hash": "^1.3.3",
    "command-exists": "^1.2.9",
    "deep-object-diff": "^1.1.0",
    "escape-path-with-spaces": "^1.0.0",
    "mousetrap": "^1.6.5",
    "mousetrap-global-bind": "^1.1.0",
    "object-hash": "^2.0.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-feather": "^2.0.8",
    "source-map-support": "^0.5.19",
    "tga2png": "^0.1.3",
    "tinycolor2": "^1.4.1",
    "typestyle": "^2.1.0",
    "xml2json": "^0.12.0"
  },
  "devDependencies": {
    "@types/command-exists": "^1.2.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/klaw": "^3.0.1",
    "@types/mousetrap": "^1.6.3",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/tinycolor2": "^1.4.2",
    "@types/xml2json": "^0.11.3",
    "electron": "^8.2.0",
    "electron-builder": "^22.8.0",
    "electron-devtools-installer": "^3.1.1",
    "electron-webpack": "^2.8.2",
    "electron-webpack-ts": "^4.0.1",
    "prettier": "^2.1.1",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1"
  },
  "build": {
    "appId": "com.amcolash.kge",
    "productName": "KotOR GUI Editor",
    "publish": [
      "github"
    ],
    "extraFiles": [
      "xoreos-tools/xoreos-tools-0.0.6-${os}64/**/*"
    ],
    "linux": {
      "category": "Utility"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
